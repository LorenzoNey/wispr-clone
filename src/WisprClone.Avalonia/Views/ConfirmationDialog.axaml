<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="WisprClone.Views.ConfirmationDialog"
        Title="Confirm"
        Width="380" Height="180"
        WindowStartupLocation="CenterOwner"
        CanResize="False"
        ShowInTaskbar="False"
        SystemDecorations="BorderOnly"
        Background="#FF1E1E1E">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock x:Name="TitleText"
                   Grid.Row="0"
                   Text="Confirm"
                   FontSize="16"
                   FontWeight="SemiBold"
                   Foreground="#FFE0E0E0"
                   Margin="0,0,0,12"/>

        <!-- Message -->
        <TextBlock x:Name="MessageText"
                   Grid.Row="1"
                   Text="Are you sure?"
                   FontSize="13"
                   Foreground="#FFB0B0B0"
                   TextWrapping="Wrap"
                   VerticalAlignment="Center"/>

        <!-- Buttons -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,16,0,0">
            <Button x:Name="NoButton"
                    Content="No"
                    Click="NoButton_Click"
                    Background="#FF3D3D3D"
                    Foreground="White"
                    BorderThickness="0"
                    Padding="24,10"
                    FontSize="12"
                    CornerRadius="4"
                    Margin="0,0,12,0"
                    Cursor="Hand"/>
            <Button x:Name="YesButton"
                    Content="Yes"
                    Click="YesButton_Click"
                    Background="#FFFF6B6B"
                    Foreground="White"
                    BorderThickness="0"
                    Padding="24,10"
                    FontSize="12"
                    CornerRadius="4"
                    Cursor="Hand"/>
        </StackPanel>
    </Grid>
</Window>
