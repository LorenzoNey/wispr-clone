<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="WisprClone.App"
             Name="WisprClone"
             RequestedThemeVariant="Dark">
    <Application.Styles>
        <FluentTheme />
    </Application.Styles>
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceInclude Source="avares://WisprClone/Resources/Styles/OverlayStyles.axaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>

    <!-- Native menu for macOS - overrides default "About Avalonia" -->
    <NativeMenu.Menu>
        <NativeMenu>
            <NativeMenuItem Header="About WisprClone" Click="AboutMenuItem_Click" />
        </NativeMenu>
    </NativeMenu.Menu>
</Application>
